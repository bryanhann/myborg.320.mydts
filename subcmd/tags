#d# List tags
#d#
#d# Options:
#d#     -a       : list all tags
#d#     -d <dir> : list tags in <dir>

source ${ROOT}/bin/activate

case $1. in
    -d.)
        /bin/ls -1 "$2/.mytags"
        exit
        ;;
    -a.)
        _mytag_ts
        ;;
    *)
        $PROG help $(basename $0)
        ;;
esac

